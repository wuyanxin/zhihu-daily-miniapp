/* pages/daily/daily.wxss */

.daily-index {
  background-color: #F6F6F6;
}

.top-swiper {
  width: 100%;
  height: 400rpx;
}

.date-text {
  display: block;
  font-size: 26rpx;
  color: #888;
  margin: 26rpx 0 26rpx 40rpx;
}

.daily-post {
  margin: 16rpx;
  padding: 20rpx 25rpx 25rpx 25rpx;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  box-shadow:0 1rpx #ccc;
  font-size: 32rpx;
  display: flex;
  flex-direction: row;
  background-color: #ffffff;
}

.daily-post-title {
  /* float: left; */
  flex: 1;
}

.daily-post-img { 
  /* float: right; */
  margin-left: 8rpx;
  width: 180rpx;
  height: 150rpx;
}